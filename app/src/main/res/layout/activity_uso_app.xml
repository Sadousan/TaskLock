<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsoApp">

    <!-- Conteúdo com ScrollView -->
    <ScrollView
        android:id="@+id/Main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TOPO com imagem curvada e título -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/topOrange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/top_orange" />

                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Uso de aplicativos"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Gráfico ilustrativo -->
            <ImageView
                android:id="@+id/imgGraf"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:src="@drawable/shadowforicon"
                android:contentDescription="Gráfico de uso de aplicativos" />

            <!-- Texto de orientação -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sugestões de bloqueio:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000" />

            <!-- Container onde os itens de app serão adicionados dinamicamente -->
            <LinearLayout
                android:id="@+id/appListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp" />

            <!-- Botão para bloquear todos os outros apps -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBlock"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_icon_start"
                android:text="Bloquear"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Botão flutuante no canto inferior direito -->
    <ImageButton
        android:id="@+id/btnRefresh"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:background="@drawable/refreshicon"
        android:contentDescription="Atualizar"/>
</FrameLayout>
