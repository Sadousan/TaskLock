<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BlockedAppsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/laranja"
                app:popupTheme="@style/Theme.TaskLock.PopupOverlay" />

            <!-- Lista dos apps bloqueados -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Apps bloqueados"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/blockedAppListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"/>

            <!-- Espaço entre lista e botão -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- Botão de desbloquear -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUnblock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_icon_start_v2"
                android:text="Desbloquear selecionados"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_gravity="center" />

            <!-- Espaço final para evitar corte em telas com gestos -->
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
