<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro">

    <EditText
        android:id="@+id/campemailcadastadro"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:hint="exemplo@gmail.com"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.486" />

    <EditText
        android:id="@+id/campcadastrarsenha"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:hint="Informe sua senha"
        android:inputType="textPassword"
        app:layout_constraintVertical_bias="0.622"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/campcadastrarconfirmarsenha"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:hint="Informe sua senha novamente"
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintVertical_bias="0.76"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_icon_start"
        android:text="Cadastrar-se"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.857"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/campcadastrarnome"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:hint="Informe seu nome"
        android:inputType="text"
        app:layout_constraintVertical_bias="0.348"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textLabelNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do usuário"
        android:textSize="16sp"
        android:fontFamily="@font/raleway_thin"
        android:textFontWeight="400"
        app:layout_constraintVertical_bias="0.295"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textLabelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textSize="16sp"
        android:fontFamily="@font/raleway_thin"
        android:textFontWeight="400"
        app:layout_constraintVertical_bias="0.42"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textLabelSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:textSize="16sp"
        android:fontFamily="@font/raleway_thin"
        android:textFontWeight="400"
        app:layout_constraintVertical_bias="0.551"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textLabelConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar senha"
        android:textSize="16sp"
        android:fontFamily="@font/raleway_thin"
        android:textFontWeight="400"
        app:layout_constraintVertical_bias="0.685"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2_ou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ou"
        app:layout_constraintVertical_bias="0.891"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primeiro acesso? Seja bem-vindo!"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintVertical_bias="0.22"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="151dp"
        android:layout_height="124dp"
        app:srcCompat="@drawable/iconecadastro"
        app:layout_constraintVertical_bias="0.003"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewAnchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="Já tem uma conta? Entrar"
        android:textColor="@color/laranja"
        android:textSize="17sp"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintVertical_bias="0.939"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
